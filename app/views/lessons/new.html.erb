 <div class="contents">
    <div class=new_box1>
        <%= form_for [@lesson] do |f| %>        
            <div style="margin: 8px 0">
                <%= f.label :教科, style: { 'margin-right' => 8 } %>
                <%= f.text_field :subject, placeholder: 'subject', value: '' %>
            </div>
        
            <div style="margin: 8px 0">
                <%= f.label :実践内容, style: { 'margin-right' => 8 } %>
                <%= f.text_area :text, placeholder: 'lesson', style: 'width: 90%; height: 300px;' %>
            </div>
            
            <div class="field">
                <%= f.file_field :image %>
            </div>
        
            <div class="row">
                <div class="col10 push1">
                  <%= button_tag type: "submit", class: "btn btn--block" do %>
                  投稿する<i class="icon-arrow-right"></i>
                  <% end %>
                </div>
            </div>        
        <% end %>
    </div>
</div>