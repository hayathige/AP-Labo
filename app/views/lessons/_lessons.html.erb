
<div class="content_post" style="background-image: url(assets/back.jpg);">
    <p><%= lesson.user.nickname %></p>
    <p><%= lesson.subject %></p>
    <p><%= lesson.text %><p/>
    <%= image_tag lesson.image.variant(resize:'300x300'), class:lesson if lesson.image.attached? %>
    
     <ul class="more_list">
        <li>
            <%= link_to '詳細', "/lessons/#{lesson.id}", method: :get %>
        </li>
        <% if user_signed_in? && current_user.id == lesson.user_id %>
        <li>
             <%= link_to '編集', "/lessons/#{lesson.id}/edit", method: :get %>
        </li>
        <li>
             <%= link_to '削除', "/lessons/#{lesson.id}", method: :delete %>
        </li>
            
        <% if user_signed_in? %>
            <% if lesson.like_user(current_user.id) %>
                <%= button_to lesson_like_path(like, lesson_id: lesson.id), method: :delete, id: "like-button", remote: true do %>
                  <%= image_tag("ico_pen1-2.gif") %>
                  <span>
                    <%= lesson.likes_count %>
                  </span>
                <% end %>
            <% else %>
                <%= button_to lesson_likes_path(lesson), id: "like-button", remote: true do %>
                  <%= image_tag("ico_pen1-8.gif") %>
                  <span>
                    <%= lesson.likes_count %>
                  </span>
                <% end %>
              <% end %>
            <% else %>
              <%= image_tag("ico_pen1-8.gif") %>
                  <span>
                    <%= lesson.likes_count %>
                  </span>
            <% end %>
        <% end %>    
     </ul> 
</div>
