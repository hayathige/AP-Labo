<% if user_signed_in? %>
  <% if lesson.like_user(current_user.id) %>
    <%= button_to lesson_like_path(like, lesson_id: lesson.id), method: :delete, id: "like-button", remote: true do %>
      <%= image_tag("icon_pen1-2.gif") %>
      <span>
        <%= lesson.like_count %>
      </span>
    <% end %>
  <% else %>
    <%= button_to lesson_likes_path(lesson), id: "like-button", remote: true do %>
      <%= image_tag("icon_pen1-8.gif") %>
      <span>
        <%= lesson.like_count %>
      </span>
    <% end %>
  <% end %>
<% else %>
  <%= image_tag("icon_pen1-8.gif") %>
    <span>
      <%= lesson.like_count %>
    </span>
<% end %>
